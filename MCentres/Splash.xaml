<winuiex:SplashScreen
	xmlns:winuiex="using:WinUIEx"
    x:Class="MCInstaller.Splash"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MCInstaller"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
	<Grid>
		<StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="8">
			<Image Source="/Images/Square44x44Logo.altform-lightunplated_targetsize-256.png"/>
            <TextBlock Style="{StaticResource SubtitleTextBlockStyle}">
                Welcome to MCInstaller!
            </TextBlock>
            <TextBlock Style="{StaticResource BodyTextBlockStyle}">
                Initializing...
            </TextBlock>
			<ProgressBar x:Name="PBar"/>
		</StackPanel>
	</Grid>
</winuiex:SplashScreen>
